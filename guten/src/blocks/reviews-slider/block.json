{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "domca/reviews-slider",
  "version": "0.1.0",
  "title": "Reviews Slider",
  "category": "widgets",
  "description": "Display client reviews quotes, and author information.",
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "useSubtitle": {
      "type": "boolean",
      "default": true
    },
    "subtitle": {
      "type": "string",
      "default": ""
    },
    "items": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "default": ""
          },
          "author": {
            "type": "string",
            "default": ""
          }
        }
      }
    },
    "useButton": {
      "type": "boolean",
      "default": false
    },
    "button": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "spacing": {
      "padding": false,
      "margin": false
    },
    "color": {
      "background": false,
      "gradients": false,
      "text": false
    }
  },
  "textdomain": "dm",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
