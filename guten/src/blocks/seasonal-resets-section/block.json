{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "domca/seasonal-resets-section",
  "version": "0.1.0",
  "title": "Seasonal Resets Section",
  "category": "widgets",
  "description": "A section explaining seasonal resets with arrow flow design and inspirational messaging. Perfect for program timelines and seasonal offerings.",
  "keywords": [
    "seasonal",
    "resets",
    "timeline",
    "arrow",
    "flow",
    "program"
  ],
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "subtitle": {
      "type": "string",
      "default": ""
    },
    "introText": {
      "type": "string",
      "default": ""
    },
    "steps": {
      "type": "array",
      "default": [
        {
          "title": "New Year Reset",
          "text": "January"
        },
        {
          "title": "Spring-to-Summer\nReset",
          "text": "after Easter"
        },
        {
          "title": "Back-to-Rhythm\nReset",
          "text": "September"
        }
      ],
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "default": ""
          },
          "season": {
            "type": "string",
            "default": ""
          }
        }
      }
    },
    "closingText": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "spacing": {
      "padding": false,
      "margin": false
    },
    "color": {
      "background": false,
      "gradients": false,
      "text": false
    }
  },
  "textdomain": "dm",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
