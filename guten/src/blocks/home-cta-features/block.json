{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "domca/home-cta-features",
  "version": "0.1.0",
  "title": "CTA with Features",
  "category": "widgets",
  "description": "The section with image, compelling headline, CTA button, and feature bubbles highlighting key benefits.",
  "keywords": ["hero", "cta", "features", "image", "call to action", "benefits"],
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "image": {
      "type": "object",
      "default": {
        "id": null,
        "url": ""
      }
    },
    "button": {
      "type": "string",
      "default": ""
    },
    "subHeading": {
      "type": "string",
      "default": ""
    },
    "features": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "default": ""
          }
        }
      }
    }
  },
  "supports": {
    "html": true,
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "spacing": {
      "padding": false,
      "margin": false
    },
    "color": {
      "background": false,
      "gradients": false,
      "text": false
    }
  },
  "textdomain": "dm",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
